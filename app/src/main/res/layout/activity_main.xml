<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zoo" />

    <ImageView
        android:id="@+id/imbVolumn"
        android:layout_width="93dp"
        android:layout_height="84dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:onClick="playSound1"
        app:layout_constraintBottom_toBottomOf="@+id/imbVolumn2"
        app:layout_constraintEnd_toStartOf="@+id/imbVolumn2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/horse" />

    <ImageView
        android:id="@+id/imbVolumn2"
        android:layout_width="88dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginTop="8dp"
        android:onClick="playSound2"
        app:layout_constraintBottom_toTopOf="@+id/txvLo"
        app:layout_constraintEnd_toStartOf="@+id/imbVolumn3"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.379"
        app:srcCompat="@drawable/elephant" />

    <ImageView
        android:id="@+id/imbVolumn3"
        android:layout_width="112dp"
        android:layout_height="79dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginTop="8dp"
        android:onClick="playSound3"
        app:layout_constraintBottom_toBottomOf="@+id/imbVolumn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imbVolumn2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/lion" />

    <ImageView
        android:id="@+id/txvLo"
        android:layout_width="119dp"
        android:layout_height="92dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"
        android:onClick="clickMap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/go" />

    <ImageView
        android:id="@+id/txvMo"
        android:layout_width="110dp"
        android:layout_height="79dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:onClick="clickMobile"
        app:layout_constraintBottom_toBottomOf="@+id/txvLo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvLo"
        app:layout_constraintTop_toTopOf="@+id/txvLo"
        app:srcCompat="@drawable/call" />
</android.support.constraint.ConstraintLayout>